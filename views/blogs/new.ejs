<% include ../partials/header %>

<div class="ui main text container segment">
    <div class="ui huge header">New Post</div>
    <form class="ui form" action="/blogs" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="title" placeholder="title">
        </div>
        <div class="field">
            <label>Image</label>
            <input type="text" name="image" placeholder="image">
        </div>
        <div class="field">
            <label>Upload An Image</label>
            <input type="file" id="fileInput" name="file">
        </div>
        <div class="field">
            <label>Location</label>
            <input type="text" name="location" placeholder="Location">
        </div>
        <div class="field">
            <label>Blog Content</label>
            <textarea name="blog[body]"></textarea>
        </div>
        <button class="ui big teal basic fade animated button">
            <div class="visible content">Post</div>
            <div class="hidden content"><i class="edit icon"></i></div>
        </button>
    </form>
</div>

<% include ../partials/footer %>