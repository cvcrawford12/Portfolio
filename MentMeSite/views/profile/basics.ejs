<% include ./profile-header %>
                    <div class="col-lg-9">
                        <div class="row profile-header">
                            <div class="col-lg-12">
                                <h1>Connor</h1>
                                <p>Add some basic information about yourself to share with others!</p>
                            </div>
                        </div>
                        <div class="row profile-form-container">
                            <div class="col-lg-12">
                                <div class="row">
                                    <div class="col-lg-10 col-centered">
                                        <form action="#" class="basic-profile-form">
                                            <div class="form-group required">
                                                <label for="first-name">First Name</label>
                                                <input type="text" class="form-control" id="first-name" placeholder="John">
                                            </div>
                                            <div class="form-group required">
                                                <label for="last-name">Last Name</label>
                                                <input type="text" class="form-control" id="last-name" placeholder="Doe">
                                            </div>
                                            <div class="form-group required ">
                                                <label for="email">Email Address</label>
                                                <input type="email" class="form-control" id="email" placeholder="johnnyappleseed@gmail.com">
                                            </div>
                                            <div class="form-group required">
                                                <label for="birth-date">Date of Birth</label>
                                                <input type="date" id="birth-date" class="form-control">
                                            </div>
                                            <div class="form-group required">
                                                <label for="language">Language <span class="small">(If possible select English)</span></label>
                                                <select id="language" class="input-medium bfh-languages form-control" data-language="en"></select>
                                            </div>
                                            <div class="form-group">
                                                <label for="country">Country</label>
                                                <select id="country" class="input-medium bfh-countries form-control" data-country="US"></select>
                                            </div>
                                            <div class="form-group text-center">
                                                <button type="submit" class="btn btn-default">Save</button>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
<% include ./profile-footer %>