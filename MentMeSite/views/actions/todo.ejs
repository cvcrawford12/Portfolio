<% include ../partials/header %>
    <link rel="stylesheet" type="text/css" href="../../stylesheets/todo.css">
    <sectionn id="todo">
        <div class="outer-container container-fluid no-padding">
            <div class="row inner-container dynamic-cols no-padding">
                <div class="col-md-3 col-sm-3 todo-list-container no-padding">
                    <div class="todo-filters-container">
                        <ul class="todo-filters">
                            <li class="todo-filter">All</li>
                            <li class="todo-filter">Type <span class="caret"></span></li>
                            <li class="todo-filter">By <span class="caret"></span></li>
