                    </div>
                    <div class="todo-container">
                        <ul class="todo-list">
                            <li class="todo"><i class="fa fa-circle" aria-hidden="true"></i><input type="text" placeholder="Placeholder"></li>
                        </ul>
                    </div>
                    <div class="add-todos-container">
                        <ul class="add-todos-list">
                            <li id="add-task"><span class="add-todo-icon"><i class="fa fa-plus-circle" aria-hidden="true"></i></span> Add New Task</li>
                            <li id="add-group"><span class="add-todo-icon"><i class="fa fa-plus-circle" aria-hidden="true"></i></span> Create Task Group</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>


